/**app.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background: #f3f5f7;
} 

.weui-loading {
  margin: 10rpx 0;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent
    url(data:image/svg+xml;base64,)
    no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 0 auto;
  padding: 0.5em 0;
  /* line-height: 1em; */
  font-size: 28rpx;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #999;
}

.no_data_style {
  padding-top: 300rpx;
  display: flex;
  justify-content: center;
  color: #333;
  font-size: 40rpx;
}
